@model expenceTracker.Models.monthlyExpence

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Expense Month</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Model.date.ToString("MMMM yyyy")
        </dd>

        <dt class = "col-sm-2">
            Budget
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.budget)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <a asp-action="DownloadExpenseMonthReport" asp-route-id="@Model?.Id" class="btn btn-primary">
        Download Report
    </a>
</div>
