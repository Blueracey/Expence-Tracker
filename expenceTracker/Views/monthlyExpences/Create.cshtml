@model expenceTracker.Models.monthlyExpence

@{
    ViewData["Title"] = "Create New Expense";
}

<h1>Create New Expense Month</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="date" class="control-label">Date</label>
        <input type="month" asp-for="date" class="form-control" />
        <span asp-validation-for="date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="budget" class="control-label">Budget</label>
        <input asp-for="budget" class="form-control" />
        <span asp-validation-for="budget" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form> 

<a href="@Url.Action("Index", "monthlyExpences")">Back to list</a>
