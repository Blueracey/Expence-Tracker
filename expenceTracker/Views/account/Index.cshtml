

@{
    ViewData["Title"] = "Home";
    //https://localhost:7267/account/Register
}

<h1 class="text-center">Expence Tracker</h1>


<hr />
<div class="d-flex justify-content-center align-items-center" style="min-height: auto;">
    <div class="card-body" style="max-width: 700px; width: 100%;">
        @if (!User.Identity.IsAuthenticated)
        {
            <ul>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="account" asp-action="Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="account" asp-action="Login">Login</a>
                </li>
            </ul>
        } else {
            <ul>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="monthlyExpences" asp-action="Index">
                        Continue to Expense Months
                    </a>
                </li>
            </ul>
        }

        <div class="text-center mt-3">
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
