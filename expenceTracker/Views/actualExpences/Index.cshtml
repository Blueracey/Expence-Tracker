@model IEnumerable<expenceTracker.Models.actualExpence>

@{
    ViewData["Title"] = "Index";
}

<h1>Actual Expenses</h1>

<p>
    <a asp-controller="monthlyExpences" asp-action="Index">Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Amount
            </th>
            <th>
                Category
            </th>
            <th>
                Payment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                $@Html.DisplayFor(modelItem => item.finalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datePayed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-category="@item.category">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
