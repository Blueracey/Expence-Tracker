@model expenceTracker.Models.actualExpence

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actual Expence</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Payment Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.finalCost)
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.category)
        </dd>
        <dt class = "col-sm-2">
            Payment Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.datePayed)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-controller="actualExpences" asp-action="Index" asp-route-expenceId="@TempData.Peek("expenceId")" asp-route-userId="@TempData.Peek("userId")">Back</a>
</div>
