@model expenceTracker.Models.actualExpence

@{
    ViewData["Title"] = "Create Actual Expense";
}

<h1>Create Actual Expense</h1>

<form asp-controller="actualExpences" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="userId">User ID</label>
        <input asp-for="userId" type="text" class="form-control" id="userId" name="userId" value="@ViewBag.userId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="expenceId">Expence ID</label>
        <input asp-for="expenceId" type="text" class="form-control" id="expenceId" name="expenceId" value="@ViewBag.expenceId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="category">Category</label>
        <input asp-for="category" type="text" class="form-control" id="category" name="category" value="@ViewBag.name" readonly />
    </div>
    <div class="form-group">
        <label asp-for="finalCost">Final Cost</label>
        <input asp-for="finalCost" type="text" class="form-control" id="finalCost" name="finalCost" />
    </div>
    <div class="form-group">
        <label asp-for="datePayed">Date Paid</label>
        <input asp-for="datePayed" type="date" class="form-control" id="datePayed" name="datePayed" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
